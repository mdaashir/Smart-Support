# Smart-Support environment variables
# Copy to .env and adjust as needed

# Redis broker (required for Milestone 2 /v2/ endpoints)
# Start Redis: docker run -p 6379:6379 redis:7-alpine
REDIS_URL=redis://localhost:6379

# Slack / Discord incoming webhook URL
# Leave empty to log mock webhook calls instead of sending them
WEBHOOK_URL=

# Urgency score threshold above which the webhook fires  (default 0.8)
WEBHOOK_THRESHOLD=0.8
